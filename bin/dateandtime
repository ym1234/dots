#!/usr/bin/env sh
# stolen from meyou https://gitlab.com/yemou/dotfiles

app_name="Time and Date"

summary="Time: $(date +'%R')"
body="Date: $(date +'%a %d %b %Y')"

command -v dunstify && dunstify -a "${app_name}" -r 13596705 "${summary}" "${body}" || notify-send -a "${app_name}" "${summary}" "${body}"
